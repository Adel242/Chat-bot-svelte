{
	"manifest_version": 3,
	"name": "CodeGPT Extension",
	"version": "0.1.02",
	"description": "CodeGPT extension",
	"action": {
		"default_title": "CodeGPT Extension",
		"default_popup": "index.html"
	},
	"icons": {
		"16": "favicon-16.png",
		"32": "favicon-32.png",
		"48": "favicon-48.png",
		"128": "favicon-128.png"
	},
	"permissions": [
		"storage",
		"tabs",
		"sidePanel",
		"activeTab"
	],
	"side_panel": {
		"default_path": "index.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"content.js"
			]
		}
	]
}