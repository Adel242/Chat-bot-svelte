{
	"manifest_version": 3,
	"name": "CodeGPT Extension",
	"version": "0.1.03",
	"description": "CodeGPT extension",
	"action": {
		"default_title": "CodeGPT Extension",
		"default_popup": "index.html"
	},
	"icons": {
		"16": "favicon-16.png",
		"32": "favicon-32.png",
		"48": "favicon-48.png",
		"128": "favicon-128.png"
	},
	"permissions": [
		"storage",
		"tabs"
	],
	"background": {
    	"service_worker": "background.js"
    }, 	
	"content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css"],
            "js": ["content.js"]
        }
    ],
	 "web_accessible_resources": [
        {
            "resources": ["content.css"],
            "matches": ["<all_urls>"]
        }
    ]
}
